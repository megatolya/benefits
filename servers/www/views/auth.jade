include ./mixins/index

extends ./layout.jade


mixin social-button-row(name, text)
    .row
        .col-md-12
            +social-button('/auth/' + name, name, text)

block content
    .social-box
        h3 Войдите, чтобы получать крутые ачивки!
            +social-button-row('facebook', i18n.get('auth.login.facebook'))
            +social-button-row('twitter', i18n.get('auth.login.twitter'))
            +social-button-row('github', i18n.get('auth.login.github'))
            +social-button-row('instagram', i18n.get('auth.login.instagram'))
