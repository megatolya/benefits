extends ./layout.jade

mixin social-button(name, text)
    a(href='/auth/' + name, title=name, class='btn-' + name).btn.btn-block.btn-social.btn-lg
        i(class='fa-' + name).fa
        | !{text}

block content
    .social-box
        h3 Войдите, чтобы получать крутые ачивки!
        .row
            .col-md-12
                +social-button('facebook', i18n.get('auth.login.facebook'))
        .row
            .col-md-12
                +social-button('twitter', i18n.get('auth.login.twitter'))
        .row
            .col-md-12
                +social-button('github', i18n.get('auth.login.github'))
